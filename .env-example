#===========================================
# Automagik Agents Configuration
#===========================================
# This file contains all environment variables needed for a working installation.
# Copy this file to .env and fill in your actual values.

# ===========================================
# üîë REQUIRED - Authentication & Core APIs
# ===========================================

# API key for automagik-agents authentication (will be auto-generated if empty)
AM_API_KEY=

# OpenAI API key - REQUIRED for AI functionality
# Get one at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Discord bot token - REQUIRED for Discord functionality
# Create bot at: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# ===========================================
# üóÑÔ∏è Database Configuration (PostgreSQL)
# ===========================================

# Database connection string (auto-configured for Docker installations)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/automagik

# Individual database components (used by Docker setup)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=automagik
POSTGRES_POOL_MIN=1
POSTGRES_POOL_MAX=10

# ===========================================
# üåê Server Configuration
# ===========================================

# Server host and port
AM_HOST=0.0.0.0
AM_PORT=8881

# Environment: development, production, testing
AM_ENV=development

# Timezone for agent operations
AM_TIMEZONE=UTC

# Pre-instantiate these agents at startup (comma-separated)
AM_AGENTS_NAMES=simple_agent

# ===========================================
# üìù Logging Configuration
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
AM_LOG_LEVEL=INFO

# Enable verbose logging with additional details
AM_VERBOSE_LOGGING=false

# Logfire token for external logging service (optional)
LOGFIRE_TOKEN=
LOGFIRE_IGNORE_NO_CONFIG=true

# Python warnings configuration
PYTHONWARNINGS=ignore

# ===========================================
# üîå Optional Integrations
# ===========================================

# Notion Integration
NOTION_TOKEN=

# Airtable Integration
AIRTABLE_TOKEN=
AIRTABLE_DEFAULT_BASE_ID=

# BlackPearl Integration
BLACKPEARL_TOKEN=
BLACKPEARL_API_URL=
BLACKPEARL_DB_URI=

# Omie Integration
OMIE_TOKEN=

# Google Drive Integration
GOOGLE_DRIVE_TOKEN=

# Flashed Integration
FLASHED_API_KEY=
FLASHED_API_URL=

# Evolution API (WhatsApp)
EVOLUTION_API_KEY=
EVOLUTION_API_URL=
EVOLUTION_INSTANCE=agent
DEFAULT_EVOLUTION_INSTANCE=default
DEFAULT_WHATSAPP_NUMBER=5511999999999@s.whatsapp.net

# Supabase Integration
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ===========================================
# üß† Knowledge Graph (Neo4j + Graphiti)
# ===========================================

# Neo4j connection (optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j

# Graphiti configuration
GRAPHITI_NAMESPACE_ID=automagik
GRAPHITI_ENV=development

# ===========================================
# üéØ Development & Testing
# ===========================================

# Tavily API for web search (optional)
TAVILY_API_KEY=

# Add any additional environment variables below this line
# Format: VARIABLE_NAME=value 