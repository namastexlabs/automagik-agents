# Authentication
AM_API_KEY=am-xxxxx

# Server Configuration
AM_PORT=8881
AM_HOST=0.0.0.0
AM_ENV=development  # development, production

# Logging Configuration
AM_LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL
AM_TIMEZONE=America/Sao_Paulo

# Agents names to initialize on startup
AM_AGENTS_NAMES=simple_agent,notion_agent,discord_agent

# Logfire Configuration
LOGFIRE_TOKEN=pylf_v1_xxxx

DATABASE_URL="postgresql://automagik:automagik@localhost:5432/automagik_agents"

# Postgres Docker Compose Configuration
POSTGRES_DB=automagik_agents
POSTGRES_USER=automagik
POSTGRES_PASSWORD=automagik
POSTGRES_PORT=5432

# Notion Integration (Only required for Notion agent)
NOTION_TOKEN=

# Discord Integration (Only required for Discord agent)
DISCORD_BOT_TOKEN=
# LLMs
GEMINI_API_KEY=
OPENAI_API_KEY=sk-your_openai_api_key_here

# Neo4j Configuration (Required for Graphiti and knowledge graph features)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_PORT=7687

# Graphiti Configuration (Requires Neo4j and OPENAI_API_KEY)
GRAPHITI_NAMESPACE_ID=automagik
GRAPHITI_ENV=development
